<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="KeyWord.ClientApplication.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:KeyWord.ClientApplication"
    xmlns:views="clr-namespace:KeyWord.ClientApplication.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar x:Name="TabBar">
        <Tab Title="Storage" Icon="{FontImage &#xf392;, FontFamily=IonIcons, Size=16}">
            <ShellContent ContentTemplate="{DataTemplate views:StoragePage}" Route="StoragePage"/>
        </Tab>
        <Tab Title="Settings" Icon="{FontImage &#xf412;, FontFamily=IonIcons, Size=16}">
            <ShellContent ContentTemplate="{DataTemplate views:SettingsView}" Route="ClickPage"/>
        </Tab>
    </TabBar>

</Shell>