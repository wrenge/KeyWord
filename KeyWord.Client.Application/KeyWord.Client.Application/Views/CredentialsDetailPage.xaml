<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:KeyWord.Client.Application.ViewModels;assembly=KeyWord.Client.Application"
             x:Class="KeyWord.Client.Application.Views.CredentialsDetailPage"
             x:DataType="local:CredentialsDetailViewModel">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit" Command="{Binding EditCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="{Binding Name}" HorizontalOptions="CenterAndExpand" FontSize="Caption"/>
            <Label Text="URL:" FontSize="Medium"/>
            <Label Text="{Binding Identifier}" FontSize="Small" />
            <Label Text="Login:" FontSize="Medium"/>
            <Label Text="{Binding Login}" FontSize="Small" />
            <Label Text="Password:" FontSize="Medium"/>
            <Label Text="{Binding Password}" FontSize="Small" />
            <Button Text="Remove" TextColor="Red" Command="{Binding RemoveCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>